<UserControl x:Class="PhysModelDeveloperGUI.LoopGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             xmlns:local="clr-namespace:PhysModelDeveloperGUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400" Background="Black">
    <Grid>

        <skia:SKElement x:Name="graphGrid" Grid.Column="0" PaintSurface="GraphGrid_PaintSurface"></skia:SKElement>
        <skia:SKElement x:Name="graphMain" Grid.Column="0" Opacity="0.8" PaintSurface="GraphMain_PaintSurface"></skia:SKElement>
        <Label Content="{Binding GraphTitle}" Foreground="{Binding GraphTitleColor}" HorizontalAlignment="Left" VerticalAlignment="Top"></Label>

    


    </Grid>
</UserControl>

